{
  "name": "minimal-react-typescript-scss",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:pratikgaloria/minimal-react-typescript-scss.git",
  "author": "<pratik.d.galoria@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "start": "webpack serve"
  },
  "dependencies": {
    "postcss": "^8.3.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "autoprefixer": "^10.2.6",
    "css-loader": "^5.2.6",
    "husky": "^7.0.1",
    "mini-css-extract-plugin": "^1.6.0",
    "node-sass": "^6.0.0",
    "postcss-loader": "^6.1.0",
    "prettier": "^2.3.2",
    "sass-loader": "^12.1.0",
    "stylelint": "^13.13.1",
    "ts-loader": "^9.2.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.3.4",
    "webpack": "^5.39.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.scss": [
        "stylelint --fix",
        "git add"
      ],
      "src/**/*.{ts,tsx}": [
        "tslint --project tsconfig.json --fix",
        "prettier --config prettier.config.js --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
